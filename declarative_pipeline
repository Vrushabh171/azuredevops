pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
               echo "hello"
            }
        }

        stage('Test') {
            steps {
                echo "How"
            }
        }

        stage('Deploy') {
            steps {
                echo "are you"
            }
        }
    }

    post {
        success {
            echo "Pipeline succeeded!"
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}
